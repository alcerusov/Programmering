package semesteropgave;

public class Screen {
	
	// metode der udskriver String
	public void displayMessage(String message){
		System.out.printf("%s",message);
	}
	
	// metoder der udskriver String på ny linje
	public void displayMessageLine(String message){
		System.out.printf("%s\n",message);
	}
	
	// metode der udskriver BitCoin beløb
	public void displayBtcAmount(double amount) {
		System.out.printf("\nBTC %,.2f", amount);
	} 
	
	// metode der udskriver beløb i danske kroner
	public void displayDkrAmount(double amount)
	{
	System.out.printf(" (DKR %,.2f)\n", amount);
	} 
}
